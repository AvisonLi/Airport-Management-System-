    async function updateGateStatus(gateId, status) {
        const confirmed = confirm(`Change Gate ${gateId} status to ${status}?`);
        if (!confirmed) return;
        
        try {
            const response = await fetch(`/api/gates/${gateId}/status`, {
                method: 'PUT',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({
                    status: status,
                    notes: `Status changed to ${status} by operator`
                })
            });
            
            const data = await response.json();
            
            if (data.success) {
                showAlert(data.message, 'success');
                const modal = document.getElementById('gateDetailsModal');
                if (modal) {
                    modal.classList.remove('active');
                }
                refreshGateStatus();
            } else {
                if (data.active_flights) {
                    const flightList = data.active_flights.map(f => 
                        `Flight ${f.flight} at ${f.departure}`
                    ).join('\n');
                    alert(`Cannot change status. Active flights:\n${flightList}`);
                } else {
                    showAlert(data.message, 'error');
                }
            }
        } catch (error) {
            showAlert('Error updating gate status: ' + error.message, 'error');
        }
    }

    async function refreshGateStatus() {
        try {
            const response = await fetch('/api/gates');
            const data = await response.json();
            
            if (data.success) {
                updateGateVisualizations(data.gates);
            }
        } catch (error) {
            console.error('Error refreshing gate status:', error);
        }
    }

    function updateGateVisualizations(gates) {
        gates.forEach(gate => {
            const gateElement = document.querySelector(`.gate-visual[data-gate-id="${gate.gate_id}"]`);
            if (gateElement) {
                // Remove all status classes
                gateElement.classList.remove('available', 'occupied', 'maintenance', 'reserved');
                // Add current status class
                gateElement.classList.add(gate.status);
                
                // Update status text
                const statusElement = gateElement.querySelector('.gate-status');
                if (statusElement) {
                    statusElement.className = `gate-status status-${gate.status}`;
                    statusElement.textContent = gate.status;
                }
                
                // Update gate info
                const infoElement = gateElement.querySelector('.gate-info');
                if (infoElement) {
                    infoElement.textContent = `Capacity: ${gate.capacity || 'N/A'}`;
                }
            }
        });
    }

    function updateGateVisualization(gateId, status) {
        const gateElement = document.querySelector(`.gate-visual[data-gate-id="${gateId}"]`);
        if (gateElement) {
            gateElement.classList.remove('available', 'occupied', 'maintenance', 'reserved');
            gateElement.classList.add(status);
            
            const statusElement = gateElement.querySelector('.gate-status');
            if (statusElement) {
                statusElement.className = `gate-status status-${status}`;
                statusElement.textContent = status;
            }
        }
    }

    function loadGateSchedule() {
        const timeline = document.getElementById('scheduleTimeline');
        if (!timeline) return;
        
        // Simple timeline for now
        const hours = ['06:00', '07:00', '08:00', '09:00', '10:00', '11:00', '12:00', '13:00', '14:00', '15:00', '16:00', '17:00', '18:00', '19:00', '20:00'];
        
        let timelineHtml = '';
        hours.forEach(hour => {
            timelineHtml += `
                <div class="time-block" style="min-width: 100px;">
                    <strong style="color: #2c3e50;">${hour}</strong>
                    <div style="font-size: 12px; margin-top: 8px; color: #666;"></div>
                </div>
