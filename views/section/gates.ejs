    <!-- Main Content Area -->
    <div class="main-content">
        <!-- Top Bar -->
        <header class="top-bar">
            <div class="breadcrumb">
                <span id="current-section">Gate Assignment Management</span>
            </div>
            <div class="user-info">
                <div class="user-details">
                    <span class="user-name"><%= user?.full_name || 'Admin User' %></span>
                    <span class="user-role"><%= user?.role || 'admin' %></span>
                </div>
                <div class="avatar"><%= user?.avatar || 'üë®‚Äçüíº' %></div>
                <a href="/logout" class="logout-btn">
                    <span>üö™</span>
                </a>
            </div>
        </header>

        <!-- Content Container -->
        <div class="content-container">
            <!-- Statistics Cards -->
            <div class="stats-cards">
                <div class="stat-card">
                    <h3>Total Gates</h3>
                    <div class="stat-number"><%= stats.gates.total %></div>
                    <p>Available: <%= stats.gates.available %></p>
                </div>
                <div class="stat-card">
                    <h3>Flight Status</h3>
                    <div class="stat-number"><%= stats.flights.total %></div>
                    <p>Assigned: <%= stats.flights.assigned %> | Unassigned: <%= stats.flights.unassigned %></p>
                </div>
                <div class="stat-card">
                    <h3>Operations</h3>
                    <div class="stat-number"><%= stats.flights.departing %></div>
                    <p>Departing | Arriving: <%= stats.flights.arriving %></p>
                </div>
                <div class="stat-card">
                    <h3>Gate Status</h3>
                    <div class="stat-number">
                        <span class="status-available" style="padding: 6px 12px; margin: 0 3px;"><%= stats.gates.available %></span>
                        <span class="status-occupied" style="padding: 6px 12px; margin: 0 3px;"><%= stats.gates.occupied %></span>
                    </div>
                    <p>Maintenance: <%= stats.gates.maintenance %></p>
                </div>
            </div>

            <!-- Main Content -->
            <div class="gates-dashboard">
                <!-- Left Column: Gates List -->
                <div class="gate-card">
                    <div class="card-header" style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 20px;">
                        <h2 style="margin: 0; color: #2c3e50;">Available Gates (<%= stats.gates.available %>)</h2>
                        <div class="action-buttons">
                            <button class="btn btn-primary" id="autoAssignBtn">
                                üöÄ Auto-Assign Flights
                            </button>
                        </div>
                    </div>
                    
                    <div class="filter-section">
                        <input type="text" id="gateSearch" placeholder="Search gates..." class="form-input">
                        <select id="gateFilter" class="form-select" style="margin-top: 10px;">
                            <option value="">All Status</option>
                            <option value="available">Available</option>
                            <option value="occupied">Occupied</option>
                            <option value="maintenance">Maintenance</option>
                        </select>
                    </div>
                    
                    <div id="gatesList" class="gate-visualization">
                        <% if (gates && gates.length > 0) { %>
                            <% gates.forEach(gate => { %>
                                <div class="gate-visual <%= gate.status %>" 
                                     data-gate-id="<%= gate.gate_id %>" 
                                     data-status="<%= gate.status %>"
                                     onclick="showGateDetails('<%= gate.gate_id %>')">
                                    <div class="gate-id"><%= gate.gate_id %></div>
                                    <div class="gate-status status-<%= gate.status %>">
                                        <%= gate.status %>
                                    </div>
                                    <% if (gate.current_flight) { %>
                                        <div class="current-flight" style="margin-top: 8px; font-size: 12px; color: #666;">
                                            <%= gate.current_flight %>
                                        </div>
                                    <% } %>
                                    <div class="gate-info" style="margin-top: 5px; font-size: 12px; color: #888;">
                                        Capacity: <%= gate.capacity || 'N/A' %>
                                    </div>
                                </div>
                            <% }); %>
                        <% } else { %>
                            <div style="grid-column: 1 / -1; text-align: center; padding: 40px; color: #666;">
                                No gates available in database
                            </div>
                        <% } %>
                    </div>
                </div>

                <!-- Right Column: Assignment Interface -->
                <div class="assignment-form">
                    <h2 style="margin-top: 0; color: #2c3e50;">Manual Gate Assignment</h2>
                    
                    <div class="form-grid">
                        <div>
                            <label style="display: block; margin-bottom: 8px; font-weight: 500; color: #4b5563;">Select Flight</label>
                            <select id="flightSelect" class="form-select">
                                <option value="">Choose a flight...</option>
                                <% if (flights && flights.needing_gate && flights.needing_gate.length > 0) { %>
                                    <% flights.needing_gate.forEach(flight => { %>
                                        <option value="<%= flight.flight_code %>">
                                            <%= flight.flight_code %> - <%= flight.route_display || `${flight.origin_airport} ‚Üí ${flight.destination_airport}` %> (<%= flight.scheduled_departure %>)
                                        </option>
                                    <% }); %>
                                <% } else { %>
                                    <option value="">No flights need gate assignment</option>
                                <% } %>
                            </select>
                        </div>
                        
                        <div>
                            <label style="display: block; margin-bottom: 8px; font-weight: 500; color: #4b5563;">Select Gate</label>
                            <select id="gateSelect" class="form-select">
                                <option value="">Choose a gate...</option>
                                <% if (gates && gates.length > 0) { %>
                                    <% gates.filter(g => g.status === 'available').forEach(gate => { %>
                                        <option value="<%= gate.gate_id %>">
                                            <%= gate.gate_id %> - <%= gate.terminal || 'Main' %> Terminal
                                        </option>
                                    <% }); %>
                                <% } else { %>
                                    <option value="">No available gates</option>
                                <% } %>
                            </select>
                        </div>
                    </div>
                    
                    <div id="compatibilityCheck" style="margin-top: 20px; display: none;">
                        <!-- Compatibility results will appear here -->
                    </div>
                    
                    <div class="action-buttons">
                        <button class="btn btn-primary" id="checkCompatibilityBtn">
                            üîç Check & Assign
                        </button>
                        <button class="btn btn-secondary" onclick="clearSelection()">
                            Clear
                        </button>
                    </div>
                </div>
            </div>

            <!-- Gate Schedule Timeline -->
            <div class="gate-schedule">
                <h2 style="margin-bottom: 20px; color: #2c3e50;">Gate Schedule Timeline</h2>
                <div class="schedule-timeline" id="scheduleTimeline">
                    <!-- Timeline will be populated by JavaScript -->
                    <div style="text-align: center; padding: 40px; color: #666;">
                        Loading schedule timeline...
                    </div>
                </div>
            </div>

            <!-- Flight Status Panel -->
            <div class="gate-card">
                <h2 style="margin-bottom: 20px; color: #2c3e50;">Flights Needing Gate Assignment</h2>
                <div class="table-container">
                    <table class="data-table">
                        <thead>
                            <tr>
                                <th>Flight Code</th>
                                <th>Route</th>
                                <th>Departure</th>
                                <th>Aircraft</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody id="flightsTable">
                            <% if (flights && flights.needing_gate && flights.needing_gate.length > 0) { %>
                                <% flights.needing_gate.forEach(flight => { %>
                                    <tr>
                                        <td><strong><%= flight.flight_code %></strong></td>
                                        <td><%= flight.route_display || `${flight.origin_airport} ‚Üí ${flight.destination_airport}` %></td>
                                        <td><%= flight.scheduled_departure %></td>
                                        <td><%= flight.aircraft_id || 'N/A' %></td>
                                        <td>
                                            <span class="status-badge" style="background: #f3f4f6; color: #374151;">
                                                <%= flight.flight_status || 'scheduled' %>
                                            </span>
                                        </td>
                                        <td>
                                            <button class="btn btn-sm btn-primary quick-assign-btn" 
                                                    data-flight="<%= flight.flight_code %>"
                                                    onclick="quickAssign('<%= flight.flight_code %>')">
                                                Assign Gate
                                            </button>
                                        </td>
                                    </tr>
                                <% }); %>
                            <% } else { %>
                                <tr>
                                    <td colspan="6" style="text-align: center; padding: 40px; color: #666;">
                                        All flights have been assigned gates
                                    </td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Assigned Flights Panel -->
            <div class="gate-card">
                <h2 style="margin-bottom: 20px; color: #2c3e50;">Currently Assigned Flights</h2>
                <div class="table-container">
                    <table class="data-table">
                        <thead>
                            <tr>
                                <th>Flight Code</th>
                                <th>Route</th>
                                <th>Departure</th>
                                <th>Gate</th>
                                <th>Aircraft</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody id="assignedFlightsBody">
                            <% if (flights && flights.with_gate && flights.with_gate.length > 0) { %>
                                <% flights.with_gate.forEach(flight => { %>
                                    <tr>
                                        <td><strong><%= flight.flight_code %></strong></td>
                                        <td><%= flight.route_display || `${flight.origin_airport} ‚Üí ${flight.destination_airport}` %></td>
                                        <td><%= flight.scheduled_departure %></td>
                                        <td>
                                            <span class="status-badge status-occupied" style="color: white;">
                                                <%= flight.gate %>
                                            </span>
                                        </td>
                                        <td><%= flight.aircraft_id || 'N/A' %></td>
                                        <td>
                                            <span class="status-badge" style="background: #f3f4f6; color: #374151;">
                                                <%= flight.flight_status || 'scheduled' %>
                                            </span>
                                        </td>
                                        <td>
                                            <button class="btn btn-sm btn-warning" 
                                                    onclick="unassignFlight('<%= flight.flight_code %>')">
                                                Unassign
                                            </button>
                                        </td>
                                    </tr>
                                <% }); %>
                            <% } else { %>
                                <!-- Rows will be added here via JS -->
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- Gate Details Modal -->
    <div id="gateDetailsModal" class="modal-overlay">
        <div class="gate-modal">
            <div class="modal-header" style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 20px; padding-bottom: 15px; border-bottom: 1px solid #e5e7eb;">
                <h2 style="margin: 0; color: #2c3e50;">Gate Details</h2>
                <button class="modal-close" style="background: none; border: none; font-size: 24px; cursor: pointer; color: #666;">√ó</button>
            </div>
            <div id="gateDetailsContent">
                <!-- Gate details will be loaded here -->
            </div>
        </div>
    </div>

    <!-- Auto-Assign Modal -->
    <div id="autoAssignModal" class="modal-overlay">
        <div class="gate-modal">
            <div class="modal-header" style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 20px; padding-bottom: 15px; border-bottom: 1px solid #e5e7eb;">
                <h2 style="margin: 0; color: #2c3e50;">Auto-Assign Multiple Flights</h2>
                <button class="modal-close" style="background: none; border: none; font-size: 24px; cursor: pointer; color: #666;">√ó</button>
            </div>
            <div id="autoAssignContent">
                <p>Select flights to auto-assign gates:</p>
                <div style="margin: 20px 0;">
                    <label style="display: block; margin-bottom: 10px;">
                        <input type="checkbox" id="selectAllFlights"> Select All Flights
                    </label>
                    <div id="flightCheckboxes" style="max-height: 300px; overflow-y: auto; padding: 10px; background: #f8fafc; border-radius: 8px;">
                        <% if (flights && flights.needing_gate && flights.needing_gate.length > 0) { %>
                            <% flights.needing_gate.forEach(flight => { %>
                                <label style="display: block; padding: 8px; border: 1px solid #e5e7eb; border-radius: 4px; margin-bottom: 5px; background: white;">
                                    <input type="checkbox" value="<%= flight.flight_code %>" class="flight-checkbox">
                                    <%= flight.flight_code %> - <%= flight.route_display || `${flight.origin_airport} ‚Üí ${flight.destination_airport}` %> (<%= flight.scheduled_departure %>)
                                </label>
                            <% }); %>
                        <% } else { %>
                            <div style="text-align: center; padding: 20px; color: #666;">
                                No flights need gate assignment
                            </div>
                        <% } %>
                    </div>
                </div>
                <div class="action-buttons">
                    <button class="btn btn-primary" id="executeAutoAssignBtn">üöÄ Auto-Assign Selected</button>
                    <button class="btn btn-secondary" id="cancelAutoAssignBtn">Cancel</button>
                </div>
                <div id="autoAssignResults" style="margin-top: 20px; display: none;"></div>
            </div>
        </div>
    </div>

    <script>
    // Global variables
    let currentSelectedFlight = null;
    let currentSelectedGate = null;
    let gateCompatibilityCache = {};

    // Initialize page
    document.addEventListener('DOMContentLoaded', function() {
        initializeGatesPage();
        setupEventListeners();
        loadGateSchedule();
    });

    function initializeGatesPage() {
        console.log('Gates page initialized');
        refreshGateStatus();
        
        // Auto-refresh every 30 seconds
        setInterval(refreshGateStatus, 30000);
    }

    function setupEventListeners() {
        // Flight selection
        const flightSelect = document.getElementById('flightSelect');
        if (flightSelect) {
            flightSelect.addEventListener('change', function(e) {
                currentSelectedFlight = e.target.value;
                updateAssignmentButton();
            });
        }
        
        // Gate selection
        const gateSelect = document.getElementById('gateSelect');
        if (gateSelect) {
            gateSelect.addEventListener('change', function(e) {
                currentSelectedGate = e.target.value;
                updateAssignmentButton();
            });
        }
        
        // Buttons
        const checkCompatibilityBtn = document.getElementById('checkCompatibilityBtn');
        if (checkCompatibilityBtn) {
            checkCompatibilityBtn.addEventListener('click', checkCompatibility);
        }
        
        const autoAssignBtn = document.getElementById('autoAssignBtn');
        if (autoAssignBtn) {
            autoAssignBtn.addEventListener('click', showAutoAssignModal);
        }
        
        // Quick assign buttons
        document.querySelectorAll('.quick-assign-btn').forEach(btn => {
            btn.addEventListener('click', function() {
                const flightCode = this.getAttribute('data-flight');
                quickAssign(flightCode);
            });
        });
        
        // Search and filter
        const gateSearch = document.getElementById('gateSearch');
        if (gateSearch) {
            gateSearch.addEventListener('keyup', filterGates);
        }
        
        const gateFilter = document.getElementById('gateFilter');
        if (gateFilter) {
            gateFilter.addEventListener('change', filterGates);
        }
        
        // Modal close buttons
        document.querySelectorAll('.modal-close').forEach(btn => {
            btn.addEventListener('click', function() {
                const modal = this.closest('.modal-overlay');
                if (modal) {
                    modal.classList.remove('active');
                }
            });
        });
        
        // Close modal when clicking outside
        document.querySelectorAll('.modal-overlay').forEach(modal => {
            modal.addEventListener('click', function(e) {
                if (e.target === this) {
                    this.classList.remove('active');
                }
            });
        });
        
        // Auto-assign modal
        const selectAllFlights = document.getElementById('selectAllFlights');
        if (selectAllFlights) {
            selectAllFlights.addEventListener('change', function() {
                const checkboxes = document.querySelectorAll('.flight-checkbox');
                checkboxes.forEach(cb => {
                    cb.checked = this.checked;
                });
            });
        }
        
        const executeAutoAssignBtn = document.getElementById('executeAutoAssignBtn');
        if (executeAutoAssignBtn) {
            executeAutoAssignBtn.addEventListener('click', executeAutoAssign);
        }
        
        const cancelAutoAssignBtn = document.getElementById('cancelAutoAssignBtn');
        if (cancelAutoAssignBtn) {
            cancelAutoAssignBtn.addEventListener('click', function() {
                document.getElementById('autoAssignModal').classList.remove('active');
            });
        }
        
        // Keyboard shortcuts
        document.addEventListener('keydown', function(e) {
            // Escape to close modals
            if (e.key === 'Escape') {
                document.querySelectorAll('.modal-overlay').forEach(modal => {
                    modal.classList.remove('active');
                });
            }
        });
    }

    function updateAssignmentButton() {
        // Function intentionally left empty as the button is now dynamic
    }

    async function checkCompatibility() {
        if (!currentSelectedFlight || !currentSelectedGate) {
            showAlert('Please select both a flight and a gate', 'warning');
            return;
        }
        
        const compatibilityDiv = document.getElementById('compatibilityCheck');
        if (!compatibilityDiv) return;
        
        compatibilityDiv.innerHTML = '<div style="padding: 15px; background: #f8fafc; border-radius: 8px; text-align: center;">üîç Checking compatibility & Assigning...</div>';
        compatibilityDiv.style.display = 'block';
        
        try {
            const response = await fetch('/api/gates/assign', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({
                    gate_id: currentSelectedGate,
                    flight_code: currentSelectedFlight,
                    check_compatibility: true,
                    override_warnings: false
                })
            });
            
            const data = await response.json();
            
            if (data.success) {
                // Success case - Gate is assigned automatically by the backend
                compatibilityDiv.innerHTML = `
                    <div style="padding: 15px; background: #d1fae5; border-radius: 8px; border: 1px solid #10b981;">
                        <div style="display: flex; align-items: center; gap: 10px;">
                            <span style="color: #10b981; font-size: 20px;">‚úÖ</span>
                            <div>
                                <strong style="color: #065f46;">Success</strong>
                                <p style="margin: 5px 0 0 0; color: #065f46;">Gate ${currentSelectedGate} successfully assigned to flight ${currentSelectedFlight}</p>
                            </div>
                        </div>
                    </div>
                `;
                
                // --- UPDATE UI WITHOUT REFRESH ---
                
                // 1. Update Gate Visualization Card
                const gateEl = document.querySelector(`.gate-visual[data-gate-id="${currentSelectedGate}"]`);
                if (gateEl) {
                    // Update classes
                    gateEl.classList.remove('available', 'maintenance', 'reserved');
                    gateEl.classList.add('occupied');
                    
                    // Update Status Text
                    const statusEl = gateEl.querySelector('.gate-status');
                    if (statusEl) {
                        statusEl.className = 'gate-status status-occupied';
                        statusEl.textContent = 'occupied';
                    }
                    
                    // Add/Update Flight info on the card
                    let flightEl = gateEl.querySelector('.current-flight');
                    if (!flightEl) {
                        flightEl = document.createElement('div');
                        flightEl.className = 'current-flight';
                        flightEl.style.cssText = 'margin-top: 8px; font-size: 12px; color: #666;';
                        // Insert before the capacity info (last child usually)
                        gateEl.insertBefore(flightEl, gateEl.lastElementChild);
                    }
                    flightEl.textContent = currentSelectedFlight;
                }

                // 2. Extract Data from "Flights Needing Assignment" Table BEFORE removing
                const flightRows = document.querySelectorAll('#flightsTable tr');
                let flightInfo = {
                    code: currentSelectedFlight,
                    route: 'N/A',
                    departure: 'N/A',
                    aircraft: 'N/A',
                    status: 'scheduled'
                };

                flightRows.forEach(row => {
                    // Assuming columns are: Code, Route, Departure, Aircraft, Status, Actions
                    if (row.cells[0].innerText.includes(currentSelectedFlight)) {
                        flightInfo.route = row.cells[1].innerText;
                        flightInfo.departure = row.cells[2].innerText;
                        flightInfo.aircraft = row.cells[3].innerText;
                        // Status might be inside a span/badge
                        flightInfo.status = row.cells[4].innerText.trim();
                        
                        // Hide row from "Needing Assignment" table
                        row.style.display = 'none';
                    }
                });

                // 3. Add to "Currently Assigned Flights" Table
                const assignedTableBody = document.getElementById('assignedFlightsBody');
                if (assignedTableBody) {
                    const newRow = `
                        <tr>
                            <td><strong>${flightInfo.code}</strong></td>
                            <td>${flightInfo.route}</td>
                            <td>${flightInfo.departure}</td>
                            <td><span class="status-badge status-occupied" style="color: white;">${currentSelectedGate}</span></td>
                            <td>${flightInfo.aircraft}</td>
                            <td><span class="status-badge" style="background: #f3f4f6; color: #374151;">${flightInfo.status}</span></td>
                            <td>
                                <button class="btn btn-sm btn-warning" onclick="unassignFlight('${flightInfo.code}')">Unassign</button>
                            </td>
                        </tr>
                    `;
                    // Prepend or append the new row
                    assignedTableBody.insertAdjacentHTML('afterbegin', newRow);
                }

                // 4. Remove flight from dropdown
                const flightSelect = document.getElementById('flightSelect');
                if (flightSelect) {
                    const optionToRemove = flightSelect.querySelector(`option[value="${currentSelectedFlight}"]`);
                    if (optionToRemove) optionToRemove.remove();
                    flightSelect.value = ""; 
                }

                // 5. Reset Gate Selection
                const gateSelect = document.getElementById('gateSelect');
                if(gateSelect) gateSelect.value = "";
                
                currentSelectedFlight = null;
                currentSelectedGate = null;
                updateAssignmentButton();

                showAlert('Gate assigned successfully', 'success');
                
            } else if (data.requires_override) {
                let conflictsHtml = '';
                if (data.conflicts && data.conflicts.length > 0) {
                    conflictsHtml = `
                        <div style="margin-top: 10px;">
                            <p style="margin: 5px 0; font-weight: 600;">Scheduling Conflicts:</p>
                            <ul style="margin: 5px 0; padding-left: 20px;">
                                ${data.conflicts.map(c => `<li>Flight ${c.flight} at ${c.departure} (${c.status})</li>`).join('')}
                            </ul>
                        </div>
                    `;
                }
                
                compatibilityDiv.innerHTML = `
                    <div style="padding: 15px; background: #fffbeb; border-radius: 8px; border: 1px solid #f59e0b;">
                        <div style="margin-bottom: 10px; display: flex; align-items: center; gap: 10px;">
                            <span style="color: #f59e0b; font-size: 20px;">‚ö†Ô∏è</span>
                            <strong style="color: #92400e;">Warning</strong>
                        </div>
                        <p style="margin: 5px 0; color: #92400e;">${data.message}</p>
                        ${conflictsHtml}
                        <div style="margin-top: 15px; display: flex; gap: 10px;">
                            <button class="btn btn-warning" onclick="assignGateWithOverride()">
                                Override & Assign
                            </button>
                            <button class="btn btn-secondary" onclick="document.getElementById('compatibilityCheck').style.display='none'">
                                Cancel
                            </button>
                        </div>
                    </div>
                `;
            } else {
                // Error case
                compatibilityDiv.innerHTML = `
                    <div style="padding: 15px; background: #fee2e2; border-radius: 8px; border: 1px solid #ef4444;">
                        <div style="display: flex; align-items: center; gap: 10px;">
                            <span style="color: #ef4444; font-size: 20px;">‚ùå</span>
                            <div>
                                <strong style="color: #991b1b;">Incompatible</strong>
                                <p style="margin: 5px 0; color: #991b1b;">${data.message}</p>
                            </div>
                        </div>
                    </div>
                `;
            }
        } catch (error) {
