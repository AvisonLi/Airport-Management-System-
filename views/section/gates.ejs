    function filterGates() {
        const searchTerm = document.getElementById('gateSearch').value.toLowerCase();
        const statusFilter = document.getElementById('gateFilter').value;
        
        const gateElements = document.querySelectorAll('.gate-visual');
        
        gateElements.forEach(element => {
            const gateId = element.querySelector('.gate-id').textContent.toLowerCase();
            const gateStatus = element.getAttribute('data-status');
            
            const matchesSearch = gateId.includes(searchTerm);
            const matchesStatus = !statusFilter || gateStatus === statusFilter;
            
            if (matchesSearch && matchesStatus) {
                element.style.display = 'block';
            } else {
                element.style.display = 'none';
            }
        });
    }

    function quickAssign(flightCode) {
        const flightSelect = document.getElementById('flightSelect');
        if (flightSelect) {
            flightSelect.value = flightCode;
            currentSelectedFlight = flightCode;
            updateAssignmentButton();
            
            // Scroll to assignment form
            document.querySelector('.assignment-form').scrollIntoView({ 
                behavior: 'smooth' 
            });
            
            showAlert(`Selected flight ${flightCode}. Now choose a gate.`, 'info');
        }
    }

    function showAutoAssignModal() {
        const modal = document.getElementById('autoAssignModal');
        if (modal) {
            modal.classList.add('active');
        }
    }

    async function executeAutoAssign() {
        const checkboxes = document.querySelectorAll('.flight-checkbox:checked');
        const selectedFlights = Array.from(checkboxes).map(cb => cb.value);
        
        if (selectedFlights.length === 0) {
            showAlert('Please select at least one flight', 'warning');
            return;
        }
        
        const resultsDiv = document.getElementById('autoAssignResults');
        const executeBtn = document.getElementById('executeAutoAssignBtn');
        const originalText = executeBtn.innerHTML;
        
        executeBtn.innerHTML = 'Processing...';
        executeBtn.disabled = true;
        
        if (resultsDiv) {
            resultsDiv.style.display = 'block';
            resultsDiv.innerHTML = '<div style="padding: 15px; background: #f8fafc; border-radius: 8px; text-align: center;">Auto-assigning gates...</div>';
        }
        
        try {
            const response = await fetch('/api/gates/auto-assign', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({
                    flight_codes: selectedFlights
                })
            });
            
            const data = await response.json();
            
            executeBtn.innerHTML = originalText;
            executeBtn.disabled = false;
            
            if (data.success) {
                let resultsHtml = `
                    <div style="padding: 20px; background: #d1fae5; border-radius: 8px; border: 1px solid #10b981;">
                        <h4 style="margin-top: 0; color: #065f46;">‚úÖ Auto-Assignment Complete</h4>
                        <p style="color: #065f46;">Successfully assigned ${data.assignments.length} flight(s)</p>
                `;
                
                if (data.assignments.length > 0) {
                    resultsHtml += `
                        <div style="margin-top: 15px;">
                            <strong style="color: #065f46;">Assignments:</strong>
                            <ul style="margin: 8px 0; padding-left: 20px; color: #065f46;">
                                ${data.assignments.map(a => `<li>Flight ${a.flight} ‚Üí Gate ${a.gate} (${a.departure})</li>`).join('')}
                            </ul>
                        </div>
                    `;
                }
                
                if (data.errors && data.errors.length > 0) {
                    resultsHtml += `
                        <div style="margin-top: 15px;">
                            <strong style="color: #92400e;">Failed Assignments (${data.errors.length}):</strong>
                            <ul style="margin: 8px 0; padding-left: 20px; color: #92400e;">
                                ${data.errors.map(e => `<li>${e.flight}: ${e.reason}</li>`).join('')}
                            </ul>
                        </div>
                    `;
                }
                
                resultsHtml += '</div>';
                
                if (resultsDiv) {
                    resultsDiv.innerHTML = resultsHtml;
                }
                
                // Refresh the page after 3 seconds
                setTimeout(() => {
                    location.reload();
                }, 3000);
                
            } else {
                if (resultsDiv) {
                    resultsDiv.innerHTML = `
                        <div style="padding: 20px; background: #fee2e2; border-radius: 8px; border: 1px solid #ef4444;">
                            <h4 style="margin-top: 0; color: #991b1b;">‚ùå Auto-Assignment Failed</h4>
                            <p style="color: #991b1b;">${data.message}</p>
                        </div>
                    `;
                }
            }
        } catch (error) {
            executeBtn.innerHTML = originalText;
            executeBtn.disabled = false;
            
            if (resultsDiv) {
                resultsDiv.innerHTML = `
                    <div style="padding: 20px; background: #fee2e2; border-radius: 8px; border: 1px solid #ef4444;">
                        <h4 style="margin-top: 0; color: #991b1b;">‚ùå Error</h4>
                        <p style="color: #991b1b;">${error.message}</p>
                    </div>
                `;
            }
        }
    }

    async function unassignFlight(flightCode) {
    const confirmed = confirm(`Unassign gate from flight ${flightCode}?`);
    if (!confirmed) return;
    
    try {
        // Use the correct API endpoint
        const response = await fetch('/api/gates/unassign-flight', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify({
                flight_code: flightCode
            })
        });
        
        // First check if response is OK
        if (!response.ok) {
            throw new Error(`HTTP error! status: ${response.status}`);
        }
        
        // Try to parse as JSON
        const text = await response.text();
        let data;
        try {
            data = JSON.parse(text);
        } catch (e) {
            console.error('Failed to parse JSON:', text);
            showAlert('Server returned invalid response', 'error');
            return;
        }
        
        if (data.success) {
            showAlert(`Gate unassigned from flight ${flightCode}`, 'success');
            
            // Refresh the page after 1 second
            setTimeout(() => {
                location.reload();
            }, 1000);
        } else {
            showAlert(data.message, 'error');
        }
    } catch (error) {
        console.error('Error unassigning flight:', error);
        showAlert('Error unassigning flight: ' + error.message, 'error');
    }
}
    function clearSelection() {
        const flightSelect = document.getElementById('flightSelect');
        const gateSelect = document.getElementById('gateSelect');
        const compatibilityDiv = document.getElementById('compatibilityCheck');
        
        if (flightSelect) flightSelect.value = '';
        if (gateSelect) gateSelect.value = '';
        if (compatibilityDiv) compatibilityDiv.style.display = 'none';
        
        currentSelectedFlight = null;
        currentSelectedGate = null;
        updateAssignmentButton();
    }

    function showAlert(message, type = 'info') {
        // Remove existing alerts
        const existingAlerts = document.querySelectorAll('.alert');
        existingAlerts.forEach(alert => alert.remove());
        
        // Create alert
        const alert = document.createElement('div');
        alert.className = `alert alert-${type}`;
        alert.innerHTML = `
            <span>${message}</span>
            <button onclick="this.parentElement.remove()" style="background: none; border: none; color: white; font-size: 20px; cursor: pointer; padding: 0; margin-left: 15px; line-height: 1;">√ó</button>
        `;
        
        document.body.appendChild(alert);
        
        // Auto remove after 5 seconds
        setTimeout(() => {
            if (alert.parentElement) {
                alert.remove();
            }
        }, 5000);
    }

    // Export functions to window
    window.checkCompatibility = checkCompatibility;
    window.assignGate = assignGate;
    window.assignGateWithOverride = assignGateWithOverride;
    window.showGateDetails = showGateDetails;
    window.updateGateStatus = updateGateStatus;
    window.filterGates = filterGates;
    window.quickAssign = quickAssign;
    window.showAutoAssignModal = showAutoAssignModal;
    window.executeAutoAssign = executeAutoAssign;
    window.unassignFlight = unassignFlight;
    window.clearSelection = clearSelection;
    window.showAlert = showAlert;
    </script>
